
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link href="~/Content/My_Style.css" rel="stylesheet" />



</head>


<body>





    <div class="row mainrow">
        <div class="col-sm-12">

            <div class="row header12 navbar-fixed-top">
                <div class="col-sm-3">
                    <img src="~/Content/Layout/logo1.png" class="img-responsive" />
                </div>

                <nav class="navbar navbar-default col-sm-7 menu_bar">
                    <button type="button" class="navbar-toggle navbar-header" data-target="#ru" data-toggle="collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>

                    </button>

                    <div class="navbar-collapse collapse" id="ru">
                        <div class="row menu_bar container-fluid ">

                            <ul class="nav navbar-nav">
                                <li class="home_menu">@Html.ActionLink("Home", "Index", "Home")</li>
                                <li class="product_menu"><a href="/Product_Information/Index?Type=0">Product</a></li>
                                <li class="dropdown special_menu">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Special <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li class="specialoffer_menu">@Html.ActionLink("Offer", "Index", "Offer")</li>
                                        <li class="offer_menu"><a href="/Product_Information/Index?Type=1">Special Offer</a></li>
                                    </ul>

                                <li class="register_menu">@Html.Partial("_Partial_account")</li>
                                <li class="login_menu">@Html.Partial("_partiallog")</li>


                                @if (Session["Customer_id"] != null && (Session["UserName"].ToString() == "ADMIN1" || Session["UserName"].ToString() == "ADMIN2"))
                                {
                                    <li class="dropdown admin_menu">
                                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin <span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li class="email_menu">@Html.ActionLink("Send Email", "SendEmail", "Email_Service")</li>
                                            <li class="report_menu">@Html.ActionLink("Report", "Index", "Report")</li>
                                        </ul>
                                    </li>
                                }
                            </ul>


                        </div>
                        <div class="row ">
                            <form class="navbar-form navbar-left" role="search">
                                <div class="form-group">
                                    <input class="form-control" type="text" placeholder="Search" />
                                </div>
                                <input type="submit" class="btn btn-default" name="submit" value="Search" style="background: red;" />

                            </form>
                        </div>




                    </div>
                </nav>

                <div class="col-sm-2 header">

                    <i class="fa fa-shopping-cart"></i>
                    <a href="/Cart/Index" class="icon-shopping-cart" style="font-size: 25px">
                        <asp:Label ID="lblCartCount" runat="server" CssClass="badge badge-warning" ForeColor="White" />@if (Session["Customer_id"] != null && Session["Cart"] != null)
                        {@Session["Cart"]}
                    </a>

                </div>

            </div>



            <div class="row container ">
                @RenderBody()

            </div>


            <div class="row col-sm-12 footer navbar-fixed-bottom">

                <a href="http://localhost:14456/Footer/Policies"> Policies</a>
                <a href="http://localhost:14456/Footer/Find_Us"> Find Us</a>
                <a href="http://localhost:14456/Footer/Contact"> Contact</a>
                <a href="http://localhost:14456/Carrier/Index"> Carrier</a>
                <a href="http://localhost:14456/Complain/MakeComplain">Complain</a>


            </div>

        </div>
    </div>


    <div class="modal" data-keyboard="false" id="loginmodal" tabindex="-1" >
        <div class="modal-dialog">
            <div class="modal-content" >

                <div class="modal-header">
                    <button class="close" data-dismiss="modal">&times; </button>
                    <h4 class="modal-title">Login</h4>
                </div>

                <div class="modal-body" >
                    <form>
                        <div class="form-group">
                            <label for="UserName">User Name</label>
                            <input class="form-control" placeholder="User Name" type="text" id="username" />
                        </div>

                        <div class="form-group">
                            <label for="PassWord">Password</label>
                            <input class="form-control" placeholder="Password" type="password" id="password" />
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-primary" >Login </button>
                    <button class="btn btn-primary" data-dismiss="modal" >Cancel</button>
                </div>

            </div>

        </div>

    </div>






</body>
</html>
