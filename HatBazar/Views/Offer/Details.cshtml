@model IEnumerable<HatBazar.Models.Package>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<p>
@if (Session["UserName"].ToString() == "ADMIN1" || Session["UserName"].ToString() == "ADMIN2")
{ @Html.ActionLink("Add More Package", "Create_Package")}
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Package_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Campaign.Campaign_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Package_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Campaign.Campaign_Name)
        </td>
        <td>@Html.ActionLink("Details", "PackageDetails", new { id = item.Package_Id }) |
@if (Session["UserName"].ToString() == "ADMIN1" || Session["UserName"].ToString() == "ADMIN2")

{       @Html.ActionLink("Edit", "Edit_Package", new { id=item.Package_Id })

           @Html.ActionLink("Delete", "Delete_Package", new { id = item.Package_Id })
        }

        </td>
    </tr>
}
  
</table>

<div>

    @Html.ActionLink("Go To Campaign", "Index", "Campaign")

</div>
